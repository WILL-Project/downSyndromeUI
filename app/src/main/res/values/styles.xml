<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>





    </style>

        <!--Background: blue foreground : white -->
    <style name = "ButtonBlue" parent="TextAppearance.AppCompat">

        <item name="android:textColor">@color/MainWhite</item>
        <item name="android:fontFamily">@font/montserrat_alternates</item>
        <item name="android:elevation">10dp</item>
        <item name="android:background">@drawable/blue_button</item>

    </style>

        <!-- Background : white foreground : blue -->

    <style name = "ButtonBlueAlt" parent = "TextAppearance.AppCompat">

        <item name="android:textColor">@color/MainBlue </item>
        <item name= "android:fontFamily">@font/m </item>
        <item name="android:elevation">10dp</item>
        <item name ="android:background">@drawable/blue_button_alt</item>
        <item name ="android:textSize">22sp</item>

    </style>


        <!-- background : yellow foreground : black -->
    <style name = "yellowButton" parent = "TextAppearance.AppCompat">

        <item name = "android:textColor">@color/MainGrey</item>
        <item name = "android:fontFamily">@font/montserrat_alternates</item>
        <item name="android:elevation">10dp</item>
        <item name = "android:drawable">@drawable/better_yellow</item>

    </style>

        <!-- background:white foreground : red  -->
    <style  name  = "redButton" parent = "TextAppearance.AppCompat">

        <item name = "android:textColor">@color/MainWhite</item>
        <item name = "android:fontFamily">@font/montserrat_alternates</item>
        <item name="android:elevation">10dp</item>
        <item name = "android:background">@drawable/red_button</item>

    </style>
    <!-- backgroung : red foreground: white -->


    <style name ="redButton_alt" parent = "TextAppearance.AppCompat">

        <item name = "android:textColor"> @color/MainRed</item>
        <item name = "android:fontFamily">@font/m</item>
        <item name="android:elevation">10dp</item>
        <item name = "android:background">@drawable/red_button_alt</item>
        <item name ="android:textSize">22sp</item>

    </style>

    <!-- general TextView Style -->

    <style name = "txtStyle" parent = "TextAppearance.AppCompat">

        <item name = "android:textColor">@color/MainGrey</item>
        <item name = "android:fontFamily">@font/m</item>

    </style>

    <!-- general EditText style -->

    <style name = "edtStyle" parent = "TextAppearance.AppCompat">

        <item name  = "android:textColor">@color/MainGrey</item>
        <item name = "android:fontFamily">@font/montserrat_alternates</item>
        <item name="android:elevation">2dp</item>
        <item name = "android:background">@drawable/generic_edit</item>
        <item name = "android:textSize">8sp</item>


    </style>

    <!-- general checkBox Style -->

    <style name="checkBoxStyle" parent = "TextAppearance.AppCompat">

        <item name = "android:textColor">@color/MainGrey</item>
        <item name =  "android:fontFamily">@font/montserrat_alternates</item>



    </style>


    <style name ="FormTxt" parent = "TextAppearance.AppCompat">

        <item name  = "android:textColor">@color/MainGrey</item>
        <item name = "android:fontFamily">@font/montserrat_alternates</item>
        <item name ="android:textStyle">bold</item>





    </style>























</resources>
